<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Post</title>
    <link rel="stylesheet" href="/css/Edit.css">
    <link rel="stylesheet" href="/css/partials/Navbar.css">
    <link rel="stylesheet" href="/css/partials/Footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <!-- Main Content -->
    <main>
        <div class="container">
            <a href="/Home" class="go-back-btn">‚Üê Go Back</a>
            <h1>Edit Post</h1>
            
            <!-- Display Error Messages -->
            <% if (errors.length > 0) { %>
                <div class="errors">
                    <% errors.forEach(function(error) { %>
                        <p><%= error.msg %></p> <!-- Make sure to use error.msg -->
                    <% }); %>
                </div>
            <% } %>

            <form action="/editpost/<%= post._id %>" method="POST" enctype="multipart/form-data">
                <div>
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" value="<%= post.title %>">
                </div>
                <div>
                    <label for="content">Content:</label>
                    <textarea id="content" name="content"><%= post.content %></textarea>
                </div>
                <div>
                    <label for="image">Image:</label>
                    <input type="file" id="image" name="image">
                    <% if (post.image) { %>
                        <img src="/images/uploads/<%= post.image %>" alt="Current Image">
                    <% } %>
                </div>
                <button type="submit">Update Post</button>
            </form>
        </div>
    </main>

</body>
</html>
